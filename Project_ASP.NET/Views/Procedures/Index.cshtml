@*Define model*@
@model IEnumerable<Procedure>

@*Define ViewData*@
@{
    ViewData["Title"] = "List of Procedures";
}

@*Write code*@
@*<h1>Welcome to Procedures View - Index </h1>*@

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Desc)</th>
                    <th>@Html.DisplayNameFor(model => model.img)</th>
                    <th>@Html.DisplayNameFor(model => model.price)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Desc)
                        </td>
                        <td class="align-middle">
                            <img class="round-circle" src="@item.img" alt="@item.Name" style="max-width: 150px"/>
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.price)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details</a>
                            <a class="btn btn-danger"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
